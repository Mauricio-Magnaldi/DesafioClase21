<div>
    <h2>Carga de producto</h2>
    <form id="form">
        <label>Titulo:</label> <input type="text" name="title" id="formInputTitle">
        <label>Descripcion:</label> <input type="text" name="description" id="formInputDescription">
        <label>Codigo:</label> <input type="text" name="code" id="formInputCode">
        <label>Precio:</label> <input type="number" name="price" id="formInputPrice">
        <label>Stado:</label> <input type="boolean" name="status" id="formInputStatus">
        <label>Stock:</label> <input type="number" name="stock" id="formInputStock">
        <label>Categoria:</label> <input type="text" name="category" id="formInputCategory">
        <input type="submit" value="Create">
    </form>
</div>


<table id="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Codigo</th>
            <th>Precio</th>
            <th>Stado</th>
            <th>Stock</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody id="tableBody">
        {{#each products}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{code}}</td>
            <td>{{price}}</td>
            <td>{{status}}</td>
            <td>{{stock}}</td>
            <td>{{category}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>